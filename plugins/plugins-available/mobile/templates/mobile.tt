<!doctype html>
<html>
  <head>
    <title>Mobile Thruk</title>
    <link rel='stylesheet' type='text/css' href='[% url_prefix %]thruk/themes/Classic/stylesheets/Classic.css' />
    <style type="text/css" media="screen">@import "[% url_prefix %]thruk/plugins/mobile/jqtouch/jqtouch.min.css";</style>
    <style type="text/css" media="screen">@import "[% url_prefix %]thruk/plugins/mobile/jqtouch/theme.min.css";</style>
    <script src="[% url_prefix %]thruk/javascript/dojo-release-1.5.0/dojo/dojo.js" type="text/javascript" charset="utf-8"></script>
    <script src="[% url_prefix %]thruk/javascript/dojo-release-1.5.0/dojox/date/posix.js" type="text/javascript" charset="utf-8"></script>
    <script src="[% url_prefix %]thruk/plugins/mobile/jqtouch/jquery.1.3.2.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="[% url_prefix %]thruk/plugins/mobile/jqtouch/jqtouch.min.js" type="application/x-javascript" charset="utf-8"></script>
    <script type="text/javascript" charset="utf-8">
      function get_host_class_for_state(state) {
        if(state == 0) { return("hostUP"); }
        if(state == 1) { return("hostDOWN"); }
        if(state == 2) { return("hostUNREACHABLE"); }
        if(state == 3) { return("hostPENDING"); }
        alert('unknown state' +  state);
      }
      function get_service_class_for_state(state) {
        if(state == 0) { return("serviceOK"); }
        if(state == 1) { return("serviceWARNING"); }
        if(state == 2) { return("serviceCRITICAL"); }
        if(state == 3) { return("serviceUNKNOWN"); }
        if(state == 4) { return("servicePENDING"); }
        alert('unknown state' +  state);
      }
      function format_date(unix) {
        var date  = new Date(unix*1000);
        var now   = new Date();
        if(dojox.date.posix.strftime(date, "%F") == dojox.date.posix.strftime(now, "%F")) {
          format = "[% datetime_format_today %]";
        } else {
          format = "[% datetime_format %]";
        }
        return(dojox.date.posix.strftime(date, format));
      }
      
      var jQT = new $.jQTouch({
            icon: '[% url_prefix %]thruk/plugins/mobile/jqtouch/img/thruk.png',
            addGlossToIcon: false,
            startupScreen: '[% url_prefix %]thruk/plugins/mobile/jqtouch/img/startup.png',
            statusBar: 'black',
            initializeTouch: 'a, .touch',
            preloadImages: [
                '[% url_prefix %]thruk/plugins/mobile/jqtouch/img/whiteButton.png',
                '[% url_prefix %]thruk/plugins/mobile/jqtouch/img/toolButton.png',
                '[% url_prefix %]thruk/plugins/mobile/jqtouch/img/loading.gif',
                '[% url_prefix %]thruk/plugins/mobile/jqtouch/img/02-redo.png',
                '[% url_prefix %]thruk/plugins/mobile/jqtouch/img/thruk.png',
                '[% url_prefix %]thruk/plugins/mobile/jqtouch/img/startup.png',
                '[% url_prefix %]thruk/plugins/mobile/jqtouch/img/06-search.png',
                '[% url_prefix %]thruk/themes/Classic/images/logo_thruk_small.png'
              ]
      });

      $(document).ready(function(e){
        $('#hosts').bind('pageAnimationEnd', function(event, info){
          if (info.direction == 'in') {
          } else {
          }
        });
        $('#last_notification').bind('pageAnimationEnd', function(event, info){
          if(info.direction == 'in') {
            //alert("in");
            $.get('[% url_prefix %]thruk/cgi-bin/mobile.cgi',
                  {
                    data: 'host_notifications',
                    limit:10
                  },
                  function(data, textStatus, XMLHttpRequest) {
                    // empty list
                    $('#notification_list').children().remove();
                    
                    // empty list
                    $.each(data, function(index, entry) {
                      if(entry.service_description) {
                        $('#notification_list').append('<li class="arrow '+get_service_class_for_state(entry.state)+'"><a href="#"><span class="date">' + format_date(entry.time) + '</span><br>' + entry.host_name+' - '+ entry.service_description +'</a></li>');
                      } else {
                        $('#notification_list').append('<li class="arrow '+get_host_class_for_state(entry.state)+'"><a href="#"><span class="date">' + format_date(entry.time) + '</span><br>' + entry.host_name+'</a></li>');
                      }
                    });
                        
                    // add a more button
                    $('#notification_list').append('<li class="more"><a href="#more">load 10 more</a></li>');
                  },
                  'json');
          } else {
            // empty list
            $('#notification_list').children().remove();
            $('#notification_list').append('<li><img src="[% url_prefix %]thruk/plugins/mobile/jqtouch/img/loading.gif" alt="loading"> loading</li>');
          }
        });
      });
    </script>
    <style type="text/css" media="screen">
      body.fullscreen #home .info {
        display: none;
      }
      #about {
        padding: 100px 10px 40px;
        text-shadow: rgba(255, 255, 255, 0.3) 0px -1px 0;
        font-size: 13px;
        text-align: center;
        background: #161618;
        color: #fff;
      }
      #about p {
        margin-bottom: 8px;
      }
      #about a {
        color: #fff;
        font-weight: bold;
        text-decoration: none;
      }
      .hidden {
        display: none;
      }
      .more {
        text-align: center;
      }
      .date {
        font-size: 14px;
      }
    </style>
  </head>
  <body>


<!-- Home -->
    <div id="home" class="current">
      <div class="toolbar">
        <a href="#reload" onClick="window.location.reload(true);" class="button slideup cancel"><img src="[% url_prefix %]thruk/plugins/mobile/jqtouch/img/02-redo.png" alt="reload"></a>
        <h1>Mobile Thruk</h1>
        <a class="button slideup" href="#about">About</a>
      </div>
      <h2>Status</h2>
        <ul class="rounded">
          <li class="arrow">
            <a href="#hosts">Hosts
            [% IF hosts.pending     > 0 %]<small class="counter hostPENDING" style="margin: 0">[% hosts.pending %]</small>[% END %]
            [% IF hosts.unreachable > 0 %]<small class="counter hostUNREACHABLE" style="margin: 0">[% hosts.unreachable %]</small>[% END %]
            [% IF hosts.down        > 0 %]<small class="counter hostDOWN" style="margin: 0">[% hosts.down %]</small>[% END %]
            [% IF hosts.up          > 0 %]<small class="counter hostUP" style="margin: 0">[% hosts.up %]</small>[% END %]
            </a>
          </li>

          <li class="arrow">
            <a href="#services">Services
            [% IF services.pending  > 0 %]<small class="counter servicePENDING" style="margin: 0">[% services.pending %]</small>[% END %]
            [% IF services.critical > 0 %]<small class="counter serviceCRITICAL" style="margin: 0">[% services.critical %]</small>[% END %]
            [% IF services.unknown  > 0 %]<small class="counter serviceUNKNOWN" style="margin: 0">[% services.unknown %]</small>[% END %]
            [% IF services.warning  > 0 %]<small class="counter serviceWARNING" style="margin: 0">[% services.warning %]</small>[% END %]
            [% IF services.ok       > 0 %]<small class="counter serviceOK" style="margin: 0">[% services.ok %]</small>[% END %]
            </a>
          </li>
        </ul>

        <h2>Search</h2>
        <form method="post">
        <ul class="rounded">
          <li class="" style="position:relative">
            <input type="text" placeholder="search" name="search" id="search" autocapitalize="off" autocorrect="off" autocomplete="off" />
            <a href="#search" class="" style="position: absolute; top: 5px; right:8px;"><img src="[% url_prefix %]thruk/plugins/mobile/jqtouch/img/06-search.png" alt="search"></a>
          </li>
        </ul>
        
        </form>
        <h2>History</h2>
        <ul class="rounded">
          <li class="arrow"><a href="#last_alerts">Last Alerts</a></li>
          <li class="arrow"><a href="#last_notification">Last Notifications</a></li>
        </ul>

        <h2>Links</h2>
        <ul class="rounded">
          <li class=""><a href="[% url_prefix %]thruk/index.html" onclick="window.location.assign(this.href)">Access as Full Client</a></li>
        </ul>
        <div class="info">
        <p>Add this page to your home screen to view the custom icon, startup screen, and full screen mode.</p>
      </div>
    </div>


<!-- About -->
    <div id="about" class="selectable">
      <p><img src="[% url_prefix %]thruk/themes/Classic/images/logo_thruk_small.png" /></p>
      <p>
        <strong>Thruk Monitoring Webinterface</strong><br />
        Version [% version %]<br />
        <a href="http://www.thruk.org">www.thruk.org</a><br />
        [% released %]
      </p>
      <br /><br />
      <p><a href="#" class="whiteButton goback">Close</a></p>
    </div>

<!-- Hosts -->
    <div id="hosts" class="selectable">
      <div class="toolbar">
        <a href="#" class="button back">Back</a>
        <h1>Hosts</h1>
      </div>
      <ul class="rounded" id="hosts_list">
        [% IF hosts.up          > 0 %]<li class="arrow"><a href="#hosts">Up<small class="counter hostUP" style="margin: 0 50px 0 0">[% hosts.up %]</small></a></li>[% END %]
        [% IF hosts.down        > 0 %]<li class="arrow"><a href="#hosts">Down<small class="counter hostDOWN" style="margin: 0 50px 0 0">[% hosts.down %]</small></a></li>[% END %]
        [% IF hosts.unreachable > 0 %]<li class="arrow"><a href="#hosts">Unreachable<small class="counter hostUNREACHABLE" style="margin: 0 50px 0 0">[% hosts.unreachable %]</small></a></li>[% END %]
        [% IF hosts.pending     > 0 %]<li class="arrow"><a href="#hosts">Pending<small class="counter hostPENDING" style="margin: 0 50px 0 0">[% hosts.pending %]</small></a></li>[% END %]
      </ul>
    </div>

<!-- Services -->
    <div id="services" class="selectable">
      <div class="toolbar">
        <a href="#" class="button back">Back</a>
        <h1>Services</h1>
      </div>
      <ul class="rounded" id="services_list">
        [% IF services.ok          > 0 %]<li class="arrow"><a href="#services">Ok<small class="counter serviceOK" style="margin: 0 50px 0 0">[% services.ok %]</small></a></li>[% END %]
        [% IF services.warning     > 0 %]<li class="arrow"><a href="#services">Warning<small class="counter serviceWARNING" style="margin: 0 50px 0 0">[% services.warning %]</small></a></li>[% END %]
        [% IF services.critical    > 0 %]<li class="arrow"><a href="#services">Critical<small class="counter serviceCRITICAL" style="margin: 0 50px 0 0">[% services.critical %]</small></a></li>[% END %]
        [% IF services.unknown     > 0 %]<li class="arrow"><a href="#services">Unknown<small class="counter serviceUNKNOWN" style="margin: 0 50px 0 0">[% services.unknown %]</small></a></li>[% END %]
        [% IF services.pending     > 0 %]<li class="arrow"><a href="#services">Pending<small class="counter servicePENDING" style="margin: 0 50px 0 0">[% services.pending %]</small></a></li>[% END %]
      </ul>
    </div>

<!-- Last Notification -->
    <div id="last_notification" class="selectable">
      <div class="toolbar">
        <a href="#" class="button back">Back</a>
        <h1>Notifications</h1>
      </div>
      <ul class="rounded notifications" id='notification_list'>
        <li><img src="[% url_prefix %]thruk/plugins/mobile/jqtouch/img/loading.gif" alt="loading"> loading</li>
      </ul>
    </div>
  </body>
</html>
